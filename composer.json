{
    "name": "unicorn-fail/emoji",
    "description": "Comprehensive PHP parser of emoticons, HTML entities, shortcodes and unicodes (emojis).",
    "type": "library",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Mark Halliwell",
            "email": "mark@unicorn.fail",
            "homepage": "https://github.com/markhalliwell",
            "role": "Lead Developer"
        }
    ],
    "support": {
        "docs": "https://github.com/unicorn-fail/emoji/blob/latest/README.md",
        "issues": "https://github.com/unicorn-fail/emoji/issues",
        "rss": "https://github.com/unicorn-fail/emoji/releases.atom",
        "source": "https://github.com/unicorn-fail/emoji"
    },
    "keywords": [
        "cldr",
        "emoji",
        "emojibase",
        "data",
        "dataset",
        "discord",
        "gfm",
        "github",
        "helper",
        "iamcal",
        "joypixels",
        "json",
        "loader",
        "markdown",
        "php",
        "php-emoji",
        "regex",
        "shortcode",
        "slack",
        "unicode"
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/unicorn-fail/configuration.git"
        }
    ],
    "require": {
        "php": "^7.2.5 || ^8.0",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-zlib": "*",
        "doctrine/lexer": "^1.2",
        "league/configuration": "dev-latest",
        "psr/event-dispatcher": "^1.0",
        "symfony/polyfill-php80": "^1.15"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpstan/phpstan": "^0.12.42",
        "phpunit/phpunit": "^8.5.8",
        "scrutinizer/ocular": "^1.5",
        "sempro/phpunit-pretty-print": "^1.4",
        "squizlabs/php_codesniffer": "^3.5",
        "unleashedtech/php-coding-standard": "^2.5",
        "vimeo/psalm": "^3.14"
    },
    "conflict": {
        "scrutinizer/ocular": "1.7.*",
        "vimeo/psalm": "3.15.0"
    },
    "autoload": {
        "psr-4": {
            "UnicornFail\\Emoji\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "UnicornFail\\Emoji\\Tests\\Unit\\": "tests/unit"
        }
    },
    "archive": {
        "exclude": [
            "/.editorconfig",
            "/.github",
            "/.gitattributes",
            "/.gitignore",
            "/.scrutinizer.yml",
            "/build.js",
            "/build.php",
            "/tests",
            "/package*.json",
            "/php*.dist",
            "/psalm.xml",
            "/scripts"
        ]
    },
    "scripts": {
        "build": "npm install && npm run build && php ./scripts/build.php",
        "fix": "vendor/bin/phpcbf",
        "phpcs": "vendor/bin/phpcs",
        "phpstan": "vendor/bin/phpstan analyse",
        "phpunit": "./scripts/phpunit --no-coverage --colors=always",
        "phpunit-coverage": "./scripts/phpunit --colors=always",
        "psalm": "vendor/bin/psalm --config=psalm.xml --output-format=phpstorm --show-info=true --stats --threads=4",
        "test": [
            "@phpcs",
            "@phpstan",
            "@psalm",
            "@phpunit"
        ],
        "test-coverage": [
            "@phpcs",
            "@phpstan",
            "@psalm",
            "@putenv XDEBUG_MODE=coverage",
            "@phpunit-coverage"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
